<main id="profile">
<%= form_for @gallery do |f| %>
  <% if @gallery.errors.any? %>
    <div class="error_messages">
      <h2>Need more info to get you set up!</h2>
      <ul>
        <% for message in @gallery.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form class="form-horizontal" role="form">
        <fieldset>

          <!-- Form Name -->
          <legend>Set Up Gallery Profile</legend>

          <div class="form-group">
            <%= f.label :name, "Gallery Name", class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :name, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :street_address, class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :street_address, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :city, class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :city, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :state, class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :state, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :zip_code, "Primary Area (Zip-Code)", class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :zip_code, value: current_user.zip_code, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :website, "Website Link (if applicable)", class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :website, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :genres, "Genres Supported (List)", class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :genres, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :days_open, "Days Open for Visitors", class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :days_open, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :hours_open, "Business Hours", class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :hours_open, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :img_uri, "Profile Image URI", class: "col-sm-10 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :img_uri, class: "form-control" %>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <%= f.submit "Submit Profile!", class: "btn btn-primary" %>
                <!--<button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button> -->
              </div>
            </div>
          </div>

        </fieldset>
      </form>
    </div><!-- /.col-lg-12 -->
  </div><!-- /.row -->


<% end %>
</main>

