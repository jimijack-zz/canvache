<main id="forms">
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Need more info to get you set up!</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form class="form-horizontal" role="form">
        <fieldset>

          <!-- Form Name -->
          <legend>Sign Up Here</legend>

          <!-- Text input-->
          <div class="form-group">
            <%= f.label :name, class: "col-sm-4 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "col-sm-4 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :email, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "col-sm-4 control-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :zip_code, class: "col-sm-4 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :zip_code, class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
              <div class="col-sm-10">
              </div>
          </div>

          <div class="form-group">
            <%= f.check_box :gallery_rep, class: "col-sm-4 control-label" %>
              <div class="col-sm-10">
                <%= f.label :gallery_rep, "I am a Gallery Representative" %>
              </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <%= f.submit "Sign me up!", class: "btn btn-primary" %>
                <!--<button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button> -->
              </div>
            </div>
          </div>

        </fieldset>
      </form>
    </div><!-- /.col-lg-12 -->
  </div><!-- /.row -->

<% end %>
</main>
